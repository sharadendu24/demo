<!DOCTYPE html>
<html>
<head>

    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">



    <title>CSV File Details</title>
    <style>

        body{
            background-color: rgb(183, 255, 255);
        }

        table {
        border-collapse: collapse;
        margin: 5%;
        }

        th{
            font-size: large;
        }

        table, th, td {
        border: 2px solid black;
        padding: 5px;
        }

    </style>




</head>



<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <h1 style="color: rgb(93, 241, 73);">CSV File Details</h1>

        <input type="text" onkeyup="search()" id="filterInput" style="margin-left: 50%;" placeholder="Search here ...." >

        


    </nav>

    

  
  


  <table>

    <thead>
      <tr>
        <% Object.keys(data[0]).forEach(header => { %>
          <th><%= header %> <br /> </th>
        <% }); %>
      </tr>
    </thead>


    <tbody id="dataList">
      <% data.forEach(row => { %>
        <tr>
          <% Object.values(row).forEach(value => { %>
            <td><%= value %></td>
          <% }); %>
        </tr>
      <% }); %>
    </tbody>

  </table>

  <%=console.log(data)%>


    <script>


      function search() {
        
        var filterValue = document.getElementById('filterInput').value.toLowerCase();
        var dataList = document.getElementById('dataList');
        var items = dataList.getElementsByTagName('tr');


        for (var i = 0; i < items.length; i++) {
          var item = items[i];
          var text = item.textContent || item.innerText;
          if (text.toLowerCase().indexOf(filterValue) > -1) {
            item.style.display = '';
          } else {
            item.style.display = 'none';
          }
        }
      }


    </script>



</body>
</html>
